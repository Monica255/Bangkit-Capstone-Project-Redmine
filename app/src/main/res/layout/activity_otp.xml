<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.otp.OtpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_otp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/img_otp_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_we_have_sent_code"
                style="@style/HeaderTextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/we_have_sent_you_the_code"
                android:textSize="22dp"
                app:layout_constraintTop_toBottomOf="@id/img_email" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/SubHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="dummyemail@gmail.com"
                app:layout_constraintTop_toBottomOf="@id/tv_we_have_sent_code" />

            <TextView
                android:id="@+id/tv_input_bellow"
                style="@style/SubHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/please_input_bellow"
                app:layout_constraintTop_toBottomOf="@id/tv_email"

                />


            <LinearLayout

                android:id="@+id/layout_input_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/tv_input_bellow">

                <EditText
                    android:id="@+id/et_otp_one"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <EditText
                    android:id="@+id/et_otp_two"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <EditText
                    android:id="@+id/et_otp_three"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <EditText
                    android:id="@+id/et_otp_four"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <EditText
                    android:id="@+id/et_otp_five"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <EditText
                    android:id="@+id/et_otp_six"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/otp_item"
                    android:cursorVisible="false"
                    android:enabled="false"
                    android:gravity="center"
                    android:imeOptions="actionNone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="5" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_start_toolbar"
        android:paddingEnd="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/red"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_marginStart="25dp"
            android:text="@string/email_verification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_paper_plane"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/img_paper_aiplane"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_send_code"
            style="@style/SubHeaderTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Sending OTP code..."
            app:layout_constraintTop_toBottomOf="@id/img_paper_plane" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_send_code" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>