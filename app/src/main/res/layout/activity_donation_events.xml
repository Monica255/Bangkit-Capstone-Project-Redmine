<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DonorEventsActivity">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp">-->


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info_donor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_info_donor"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/cv_banner">

            <TextView
                android:id="@+id/tv_verify_state"
                style="@style/TitleTextBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unverified_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_last_blood_donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_blood_donation"
                app:layout_constraintBottom_toTopOf="@+id/label_can_donate_again"
                app:layout_constraintStart_toStartOf="@id/tv_verify_state"
                app:layout_constraintTop_toBottomOf="@id/tv_verify_state" />


            <TextView
                android:id="@+id/label_can_donate_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="@string/can_donate_again"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_verify_state" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="--"
                app:layout_constraintEnd_toStartOf="@id/border"
                app:layout_constraintTop_toTopOf="@id/label_last_blood_donation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="--"
                app:layout_constraintEnd_toStartOf="@id/border"
                app:layout_constraintTop_toTopOf="@id/label_can_donate_again" />

            <RelativeLayout
                android:id="@+id/border"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:background="@color/red"
                app:layout_constraintEnd_toStartOf="@id/tv_bloodType"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bloodType"
                style="@style/HeaderTextBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="@string/b"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_filter"
        style="@style/DescriptionText"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_filter"
        android:text="@string/filter"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_info_donor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_donationEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bt_filter"
        tools:listitem="@layout/item_vertical_donation_events" />

    <!--</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_marginStart="25dp"
            android:text="@string/blood_donation_events"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>