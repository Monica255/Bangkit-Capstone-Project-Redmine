<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verifyaccount.VerifyAccountActivity">

    <ScrollView
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_verify"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:visibility="visible"
                    android:id="@+id/lt_javrvis"
                    android:layout_marginTop="20dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    app:layout_constraintBottom_toTopOf="@id/tv_we_need"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:background="@color/white"
                    app:lottie_rawRes="@raw/verify_id" />

                <TextView
                    android:id="@+id/tv_we_need"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/HeaderTextBold"
                    android:textColor="@color/not_so_black"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/lt_javrvis"
                    android:text="We need to verify yout ID"
                    />
                <TextView
                    android:id="@+id/tv_des"
                    app:layout_constraintTop_toBottomOf="@id/tv_we_need"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In order to be an eligible blood donor, we need to be 100% sure that You are You."
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_start_end"
                    android:layout_marginEnd="@dimen/margin_start_end"
                    android:layout_marginTop="10dp"
                    style="@style/TitleText"

                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_photo"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="13dp"
                android:adjustViewBounds="true"
                android:src="@drawable/placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_verify" />
            <LinearLayout
                android:id="@+id/layout_photo"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/img_photo"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_gallery"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icon_gallery"
                    android:backgroundTint="@color/blue"
                    android:layout_margin="20dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_camera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icon_camera"
                    android:backgroundTint="@color/blue"
                    android:layout_margin="20dp"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"
                android:id="@+id/bt_verify_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_photo"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_login_selector"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginEnd="@dimen/margin_start_end"
                android:text="@string/verify_account2"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_start_toolbar"
        android:paddingEnd="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/red"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_marginStart="25dp"
            android:text="@string/verify_account2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>