<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.blooddonation.BloodDonationActivity">


    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_banner"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginEnd="@dimen/margin_start_end"
                android:elevation="10dp"
                app:cardCornerRadius="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_donor_detail"
                style="@style/cardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/margin_start_end"
                app:layout_constraintTop_toBottomOf="@id/cv_banner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_info_donor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/cv_white_selector"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_banner">

                    <TextView
                        android:id="@+id/tv_verify_state"
                        style="@style/TitleTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unverified_account"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_last_blood_donation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/label_last_blood_donation"
                        app:layout_constraintBottom_toTopOf="@+id/label_can_donate_again"
                        app:layout_constraintStart_toStartOf="@id/tv_verify_state"
                        app:layout_constraintTop_toBottomOf="@id/tv_verify_state" />


                    <TextView
                        android:id="@+id/label_can_donate_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/can_donate_again"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_verify_state"
                        app:layout_constraintTop_toBottomOf="@id/label_last_blood_donation" />

                    <TextView
                        android:id="@+id/last_blood_donation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="--"
                        style="@style/DescriptionText"
                        app:layout_constraintEnd_toStartOf="@id/border"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_last_blood_donation" />

                    <TextView
                        android:id="@+id/can_donate_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="AUGUST/13/2022"
                        style="@style/DescriptionText"
                        app:layout_constraintEnd_toStartOf="@id/border"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_can_donate_again" />

                    <RelativeLayout
                        android:id="@+id/border"
                        android:layout_width="3dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="70dp"
                        android:background="@color/red"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_bloodType"
                        style="@style/HeaderTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="AB+"
                        android:layout_marginStart="10dp"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="@id/border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:id="@+id/bt_blood_donation_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/margin_start_end"
                app:layout_constraintTop_toBottomOf="@id/cv_donor_detail">

                <TextView
                    style="@style/HeaderTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/blood_donation_events" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_horizontal_donor_events"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="@dimen/margin_start_end_variant"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/margin_start_end_variant"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/bt_blood_donation_events" />

            <com.airbnb.lottie.LottieAnimationView
                android:visibility="visible"
                android:id="@+id/lt_no_data_donation_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/bt_blood_donor_req"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_blood_donation_events"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_no_data" />
            <RelativeLayout
                android:id="@+id/bt_blood_donor_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginEnd="@dimen/margin_start_end"
                app:layout_constraintTop_toBottomOf="@id/rv_horizontal_donor_events">

                <TextView
                    style="@style/HeaderTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/blood_donor_req" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_horizontal_donor_request"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="@dimen/margin_start_end_variant"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/margin_start_end_variant"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/bt_blood_donor_req" />

            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:id="@+id/lt_no_data_donor_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bt_blood_donor_req"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_no_data" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/lazy_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/lazy_banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:elevation="10dp"
            app:cardCornerRadius="14dp"
            app:layout_constraintBottom_toTopOf="@id/lazy_donor_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lt_javrvis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                android:scaleType="centerCrop"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_lazy" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lazy_donor_detail"
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@id/lazy_banner">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:scaleType="centerCrop"
                app:lottie_rawRes="@raw/loading_lazy" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/lazy_blood_donation_events"
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@id/lazy_donor_detail">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:scaleType="centerCrop"
                app:lottie_rawRes="@raw/loading_lazy" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            app:layout_constraintBottom_toTopOf="@id/lazy_blood_donor_req"
            android:id="@+id/lazy_horizontal_donor_events"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="@dimen/margin_start_end_variant"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/margin_start_end_variant"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lazy_blood_donation_events">

            <androidx.cardview.widget.CardView
                style="@style/cardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/lazy_horizontal_donor_events">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:scaleType="centerCrop"
                    app:lottie_rawRes="@raw/loading_lazy" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/cardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/lazy_horizontal_donor_events">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:scaleType="centerCrop"
                    app:lottie_rawRes="@raw/loading_lazy" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/lazy_blood_donor_req"
            style="@style/cardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@id/req"
            android:layout_marginEnd="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@id/lazy_horizontal_donor_events">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:scaleType="centerCrop"
                app:lottie_rawRes="@raw/loading_lazy" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/req"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="@dimen/margin_start_end_variant"
            android:layout_marginEnd="@dimen/margin_start_end_variant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lazy_blood_donor_req"
            tools:layout_editor_absoluteX="12dp">

            <androidx.cardview.widget.CardView
                style="@style/cardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/lazy_horizontal_donor_events">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_lazy" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/cardViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/lazy_horizontal_donor_events">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_lazy" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_start_toolbar"
        android:paddingEnd="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/red"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_marginStart="25dp"
            android:text="@string/blood_donation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>