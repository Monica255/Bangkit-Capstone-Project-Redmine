<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_user_profile"
                style="@style/cardViewStyle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:padding="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/TitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="arilumintang@gmail.com"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_name"
                        app:layout_constraintTop_toBottomOf="@id/tv_name" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/HeaderTextBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Dimas Ari L."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_profile"
                        app:layout_constraintTop_toTopOf="@id/img_profile" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_donor_detail"
                style="@style/cardViewStyle"
                android:layout_width="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_info_donor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/cv_white_selector"
                    android:padding="15dp"
                    app:layout_constraintTop_toBottomOf="@id/cv_banner">

                    <TextView
                        android:id="@+id/tv_verify_state"
                        style="@style/TitleTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unverified_account"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_last_blood_donation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/label_last_blood_donation"
                        app:layout_constraintBottom_toTopOf="@+id/label_can_donate_again"
                        app:layout_constraintStart_toStartOf="@id/tv_verify_state"
                        app:layout_constraintTop_toBottomOf="@id/tv_verify_state" />


                    <TextView
                        android:id="@+id/label_can_donate_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/can_donate_again"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_verify_state"
                        app:layout_constraintTop_toBottomOf="@id/label_last_blood_donation" />

                    <TextView
                        android:id="@+id/last_blood_donation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="--"
                        style="@style/DescriptionText"
                        app:layout_constraintEnd_toStartOf="@id/border"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_last_blood_donation" />

                    <TextView
                        android:id="@+id/can_donate_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="AUGUST/13/2022"
                        style="@style/DescriptionText"
                        app:layout_constraintEnd_toStartOf="@id/border"
                        app:layout_constraintBaseline_toBaselineOf="@id/label_can_donate_again" />

                    <RelativeLayout
                        android:id="@+id/border"
                        android:layout_width="3dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="70dp"
                        android:background="@color/red"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_bloodType"
                        style="@style/HeaderTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="AB+"
                        android:layout_marginStart="10dp"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="@id/border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_my_donor_req"
                style="@style/cardViewStyle.cardViewStyleFixed">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/my_donor_req" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_language_setting"
                style="@style/cardViewStyle.cardViewStyleFixed">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/language_setting" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_contact_us"
                style="@style/cardViewStyle.cardViewStyleFixed">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/contact_us" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_about_redmine"
                style="@style/cardViewStyle.cardViewStyleFixed">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="@string/about" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_signOut"
                style="@style/cardViewStyle.cardViewStyleFixed"
                android:layout_marginBottom="20dp">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cv_white_selector"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:textColor="@color/red"
                    android:text="@string/sign_out" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_start_end"
        android:paddingEnd="@dimen/margin_start_end"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_gravity="center"
            android:text="@string/profile" />

    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>