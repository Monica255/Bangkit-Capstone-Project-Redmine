<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ui.detaildonorreq.DonorReqContactFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_can_donate_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_can_donate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                style="@style/TitleTextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.5"
                    android:text="@string/number" />

                <TextView
                    android:id="@+id/tv_donor_req_phone_number"
                    style="@style/TitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="10"
                    android:text="87761142589" />

                <Button
                    android:id="@+id/bt_copy"
                    style="@style/TitleText"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/red"
                    android:text="@string/copy"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_call"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/blue"
                android:drawableLeft="@drawable/icon_phone_rezize"
                android:drawableTint="@color/white"
                android:text="@string/call"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_wa"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/green"
                android:drawableLeft="@drawable/icon_whatsapp_resize"
                android:drawableTint="@color/white"
                android:text="@string/whatsapp"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>