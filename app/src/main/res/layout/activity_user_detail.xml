<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.UserDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingStart="@dimen/margin_start_end"
        android:paddingEnd="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/bt_back_arrow"
            android:paddingTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_toolbarTitle"
            style="@style/HeaderTextBold"
            android:layout_marginStart="25dp"
            android:text="@string/user_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"

        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/layout_unverified_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginEnd="@dimen/margin_start_end"
                android:background="@color/red"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/TitleTextBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="@string/unverified_account"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_verified_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginEnd="@dimen/margin_start_end"
                android:background="@color/blue"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_unverified_account">

                <TextView
                    style="@style/TitleTextBold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/verified_account"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_user_detail"
                style="@style/cardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/margin_start_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_verified_account">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/bt_save"
                            style="@style/SubHeaderTextBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:alpha="0.5"
                            android:clickable="true"
                            android:enabled="false"
                            android:text="@string/save"
                            android:textColor="@color/red" />
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:visibility="gone"
                            android:id="@+id/bt_discard"
                            style="@style/SubHeaderTextBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:text="@string/discard_changes"
                            android:textColor="@color/red" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/img_profile_placeholder_male"

                        />

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="20dp"
                        android:maxLines="1"
                        android:text="@string/name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_name"
                        style="@style/InputLayoutStyle"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        app:boxStrokeColor="@color/blue"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:maxLines="1"
                            tools:text="Dimas Ari Lumintang" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:maxLines="1"
                        android:text="@string/email" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/il_email"
                        style="@style/InputLayoutStyle"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        app:boxStrokeColor="@color/blue"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            tools:text="arilumintang@gmail.com" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:clipToPadding="false"
                        android:maxLines="1"
                        android:text="@string/phone_number" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_start_end"
                        android:paddingEnd="@dimen/margin_start_end">

                        <TextView
                            android:id="@+id/code_phone_number"
                            style="@style/SubHeaderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true"
                            app:errorIconDrawable="@null"
                            app:errorIconTint="@color/red"
                            app:helperText=""
                            app:hintEnabled="false"
                            app:layout_constraintBaseline_toBaselineOf="@id/code_phone_number"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/code_phone_number">

                            <EditText
                                android:id="@+id/et_phoneNumber"
                                style="@style/SubHeaderText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:outlineSpotShadowColor="@color/red"
                                android:paddingStart="0dp"
                                android:textColor="@color/not_so_black"
                                tools:text="87761142589" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_start_end"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="@dimen/margin_start_end"
                        android:clipToPadding="false"

                        android:text="@string/province_residence" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_pick_province"
                        style="@style/cardViewStyle.cardViewStyleFixed"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/tv_province"
                            style="@style/TitleText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:background="@drawable/cv_white_selector"
                            android:gravity="center"
                            android:text="Province" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:clipToPadding="false"
                        android:text="@string/city_residence" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_pick_city"
                        style="@style/cardViewStyle.cardViewStyleFixed"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        app:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/tv_city"
                            style="@style/TitleText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:background="@drawable/cv_white_selector"
                            android:gravity="center"
                            android:text="City" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TitleTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:clipToPadding="false"
                        android:text="@string/password" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_edit_password"
                        style="@style/cardViewStyle.cardViewStyleFixed"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="4dp">

                        <TextView
                            style="@style/TitleText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cv_white_selector"
                            android:gravity="center"
                            android:text="@string/edit_password" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/white_space"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/cv_user_detail"

                />

            <LinearLayout
                android:id="@+id/layout_verify_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/white_space">

                <Button
                    android:id="@+id/bt_verify_account"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_end"
                    android:layout_marginEnd="@dimen/margin_start_end"
                    android:text="@string/verify_account"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/margin_start_end"
                    android:layout_marginBottom="20sp"
                    android:text="@string/your_account_not_verified_yet"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bt_verify_account" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>