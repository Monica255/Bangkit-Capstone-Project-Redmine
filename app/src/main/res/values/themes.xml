<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RedmineCapstoneProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/red</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/not_so_black</item>
    </style>

    <style name="HeaderText" parent="TextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubHeaderText" parent="TextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleText" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DescriptionText" parent="TextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HeaderTextBold" parent="HeaderText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderTextBold" parent="SubHeaderText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextBold" parent="TitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">84dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/not_so_black</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="colorError">@color/blue</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="cardViewStyle.cardViewStyleFixed" parent="cardViewStyle">
        <item name="android:layout_height">@dimen/cv_width</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/red</item>
        <item name="android:gravity">center</item>
    </style>



</resources>